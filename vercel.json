interface BuildCommand {
  command: string;
  output?: string;
}

interface EnvTemplate {
  [key: string]: string;
}

interface HeaderRule {
  source: string;
  headers: Array<{ key: string; value: string }>;
}

interface CacheStrategy {
  matchPatterns: string[];
  expirationTimeSeconds: number;
}

interface FrameworkSettings {
  vercel?: Record<string, any>;
  netlify?: Record<string, any>;
}

interface DeployConfig {
  build: BuildCommand;
  env: EnvTemplate;
  headers: Array<HeaderRule>;
  cache: CacheStrategy[];
  frameworkSettings: FrameworkSettings;
}

export const deployConfig: DeployConfig = {
  build: {
    command: "next build && next export",
    output: ".out"
  },
  env: {
    NEXT_PUBLIC_API_URL: "",
    NEXT_PUBLIC_STRIPE_KEY: ""
  },
  headers: [
    {
      source: "/(.*)",
      headers: [
        { key: "Strict-Transport-Security", value: "max-age=31536000; includeSubDomains; preload" },
        { key: "X-Frame-Options", value: "DENY" },
        { key: "X-XSS-Protection", value: "1; mode=block" },
        { key: "X-Content-Type-Options", value: "nosniff" }
      ]
    }
  ],
  cache: [
    {
      matchPatterns: ["/static/*"],
      expirationTimeSeconds: 31536000
    },
    {
      matchPatterns: ["/api/*"],
      expirationTimeSeconds: 0
    }
  ],
  frameworkSettings: {
    vercel: {
      buildCommand: "yarn run build",
      outDir: ".out"
    },
    netlify: {
      publish: ".out"
    }
  }
};

